<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/content_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/main_content_background"
        android:typeface = "serif"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context="project.skitracker.MainActivity">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:gravity="center">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center">

            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Szerokość:"
                    android:ems="10"
                    android:textSize="25sp"
                    android:id="@+id/szerokosc_TextView"
                    android:gravity = "left"
                    android:layout_marginRight="10dp"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="0"
                    android:ems="10"
                    android:textSize="25sp"
                    android:id="@+id/szerokosc_view_t"
                    android:gravity = "start"/>

        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center">

            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Długość:"
                    android:ems="10"
                    android:textSize="25sp"
                    android:id="@+id/dlugosc_TextView"
                    android:gravity = "left"
                    android:layout_marginRight="10dp"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="0"
                    android:ems="10"
                    android:textSize="25sp"
                    android:id="@+id/dlugosc_view_t"
                    android:gravity = "start"/>

        </LinearLayout>


        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center">

            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Prędkość:"
                    android:ems="10"
                    android:textSize="25sp"
                    android:id="@+id/predkosc_TextView"
                    android:gravity = "left"
                    android:layout_marginRight="10dp"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="0 km/h"
                    android:ems="10"
                    android:textSize="25sp"
                    android:id="@+id/predkosc_view_t"
                    android:gravity = "start"/>

        </LinearLayout>

        <ProgressBar
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/velocitybar"
                android:indeterminate="false"
                android:minWidth="200dip"
                android:maxWidth="200dip"
                android:max="80"
                android:layout_marginBottom="20dp"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"

                android:gravity="center">

            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Przyspiesznie:"
                    android:ems="10"
                    android:textSize="25sp"
                    android:id="@+id/acc_TextView"
                    android:gravity = "left"
                    android:layout_marginRight="10dp"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="0 m/s^2"
                    android:ems="10"
                    android:textSize="25sp"
                    android:id="@+id/acc_view_t"
                    android:gravity = "start"/>

        </LinearLayout>


        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/acceleration_bar"
                android:indeterminate="false"
                android:minWidth="200dip"
                android:maxWidth="200dip"
                android:max="80"
                android:progress="40"
                android:layout_marginBottom="20dp"/>
    </LinearLayout>


</RelativeLayout>
